const { Sequelize, DataTypes } = require("sequelize");

const sequelize = new Sequelize("notepad", "myserver", "root123", {
  host: "localhost",
  dialect: "mssql",
  pool: {
    max: 5,
    min: 0,
    idle: 10000,
  },
});

const db = {};

db.Sequelize = Sequelize;
db.sequelize = sequelize;

db.notes = require("../model/notes")(sequelize, DataTypes);

module.exports = db;
