const {Sequelize,DataTypes} = require("sequelize");
const sequelize = new Sequelize('notepad','myserver','root', {
  host:'localhost',  
  dialect:'mssql',
  pool: {
    max:5,
    min: 0,
    idle:10000
  }
});

const db = {};

db.Sequelize = Sequelize;
db.sequelize = sequelize;

db.notes = require("../model/notes")(sequelize,DataTypes);

// db.tutor= require("./tutors")(sequelize,DataTypes)

// db.tutorials.hasMany(db.tutor,{foreignKey:'courseid'})

module.exports = db;